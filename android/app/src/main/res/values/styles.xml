<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--  appbar  -->
    <style name="CustomAppbar" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="appBarLayoutStyle">@color/white</item>
    </style>

    <!-- g sans black medium -->
    <style name="Theme.AppCompat.TextView.gSans.Black.Medium" parent="@style/Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/gmarket_sans_medium</item>
    </style>

    <!-- g sans black light -->
    <style name="Theme.AppCompat.TextView.gSans.Black.Light" parent="@style/Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/gmarket_sans_light</item>
    </style>

    <!-- g sans black bold -->
    <style name="Theme.AppCompat.TextView.gSans.Black.Bold" parent="@style/Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/gmarket_sans_bold</item>
    </style>

    <!-- g sans white medium -->
    <style name="Theme.AppCompat.TextView.gSans.White.Medium" parent="@style/Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/gmarket_sans_medium</item>
    </style>

    <!-- g sans white light -->
