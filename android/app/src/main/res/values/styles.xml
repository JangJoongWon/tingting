    </style>

    <!-- g sans white bold -->
    <style name="Theme.AppCompat.TextView.gSans.White.Bold" parent="@style/Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/gmarket_sans_bold</item>
    </style>

</resources>