<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--  appbar  -->
    <style name="CustomAppbar" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="appBarLayoutStyle">@color/white</item>
    </style>

    <!-- g sans black medium -->
    <style name="Theme.AppCompat.TextView.gSans.Black.Medium" parent="@style/Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/gmarket_sans_medium</item>
    </style>

    <!-- g sans black light -->
    <style name="Theme.AppCompat.TextView.gSans.Black.Light" parent="@style/Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/gmarket_sans_light</item>
    </style>

    <!-- g sans black bold -->
    <style name="Theme.AppCompat.TextView.gSans.Black.Bold" parent="@style/Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/gmarket_sans_bold</item>
    </style>

    <!-- g sans black bold large-->
    <style name="Theme.AppCompat.TextView.gSans.Black.Bold.Large" parent="@style/Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/gmarket_sans_bold</item>
        <item name="android:textSize">@dimen/_14sdp</item>
    </style>

    <!-- g sans white medium -->
    <style name="Theme.AppCompat.TextView.gSans.White.Medium" parent="@style/Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/gmarket_sans_medium</item>
    </style>

    <!-- g sans white light -->
    <style name="Theme.AppCompat.TextView.gSans.White.Light" parent="@style/Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/gmarket_sans_light</item>
    </style>

    <!-- g sans white bold -->
    <style name="Theme.AppCompat.TextView.gSans.White.Bold" parent="@style/Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/gmarket_sans_bold</item>
    </style>

    <style name="CustomDatePicker" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- 상단 Title 배경색 -->
        <item name="colorAccent">@color/calendar_day_selected_background_color</item>
        <!-- 선택한 날짜 배경 색 -->
        <item name="colorControlActivated">@color/calendar_day_selected_background_color</item>
        <!-- Highlight item color-->
        <item name="colorControlHighlight">@color/calendar_day_selected_background_color</item>
        <!--Calender Background color -->
        <item name="android:colorBackground">@color/white</item>
        <!-- Week TextColor-->
        <item name="android:textColorSecondary">@color/calendar_day_selected_font_color</item>
        <!-- Calender Number color arrow color (< >) -->
        <item name="android:textColorPrimary">@color/calendar_day_selected_font_color</item>
        <!--day , month TextColor-->
        <item name="android:textColorPrimaryInverse">@color/calendar_day_selected_font_color</item>
        <!-- year-->
        <item name="android:textColorSecondaryInverse">@color/calendar_day_selected_font_color</item>
        <!-- 취소/확인버튼 색상 -->
        <item name="android:textColor">@color/calendar_day_selected_font_color</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="cornerSize">@dimen/_8sdp</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="fontFamily">@font/gmarket_sans_medium</item>
    </style>

    <style name="CustomDateRangePicker" parent="ThemeOverlay.MaterialComponents.MaterialCalendar.Fullscreen">
        <!-- 색상 변환 -->
        <item name="colorPrimary">@color/blue_mild</item>
        <item name="colorPrimaryDark">@color/calendar_day_selected_background_color</item>
        <item name="android:textColor">@color/grey</item>
        <item name="materialCalendarHeaderTitle">@style/Theme.AppCompat.TextView.gSans.Black.Bold.Large</item>
        <item name="materialCalendarHeaderSelection">@style/Theme.AppCompat.TextView.gSans.White.Medium</item>

        <!-- 폰트 변환 -->
        <item name="fontFamily">@font/gmarket_sans_medium</item>
        <item name="color">@font/gmarket_sans_medium</item>

        <!-- 직접 입력 버튼 숨김 -->
        <item name="iconTint">@color/calendar_day_selected_background_color</item>
    </style>


</resources>