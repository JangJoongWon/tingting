<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_liked_concert"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_100sdp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="@dimen/_8sdp"
    android:orientation="horizontal"
    android:background="@drawable/frame_liked_concert"
    android:elevation="@dimen/_2sdp"
    android:layout_marginHorizontal="@dimen/_12sdp">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:layout_margin="@dimen/_4sdp"
        app:cardCornerRadius="@dimen/_17sdp">

        <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/img_concert_detail_dummy"
            android:scaleType="centerCrop"/>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="7"
        android:padding="@dimen/_12sdp">

        <TextView
            android:id="@+id/textview_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="title"
            android:layout_marginBottom="@dimen/_4sdp"
            style="@style/Theme.AppCompat.TextView.gSans.Black.Bold"
            android:textSize="@dimen/_12sdp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_10sdp"
                android:src="@drawable/ic_marker"/>

            <Space
                android:layout_width="@dimen/_2sdp"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/textview_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="title"
                style="@style/Theme.AppCompat.TextView.gSans.Black.Bold"
                android:textSize="@dimen/_10sdp"/>

        </LinearLayout>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/_8sdp"
                android:layout_height="@dimen/_8sdp"
                android:src="@drawable/ic_calendar_grey"
                android:layout_gravity="center"/>

            <Space
                android:layout_width="@dimen/_3sdp"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/textview_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="title"
                style="@style/Theme.AppCompat.TextView.gSans.Black.Medium"
                android:textColor="@color/grey"
                android:textSize="@dimen/_8sdp"/>

        </LinearLayout>


    </LinearLayout>

    <ImageView
        android:layout_width="@dimen/_4sdp"
        android:layout_height="@dimen/_8sdp"
        android:src="@drawable/ic_arrow_right"
        android:layout_gravity="center"
        android:layout_marginRight="@dimen/_16sdp"/>

</LinearLayout>